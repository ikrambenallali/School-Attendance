generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  role      Role
  status    UserStatus @default(ACTIVE)

  @@map("users")
}

enum Role {
  ADMIN
  TEACHER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}
